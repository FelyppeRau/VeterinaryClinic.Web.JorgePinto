@model VeterinaryClinic.Web.JorgePinto.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
}

<h3>Recover Password</h3>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group">               
                <input type="submit" value="Recover password" class="btn btn-outline-primary" />
                <a asp-action="Login" class="btn btn-outline-success"><i class="fa-solid fa-rotate-left"></i>  Back to login</a>
            </div>
        </form>
        <div class="text-success small">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
