@model VeterinaryClinic.Web.JorgePinto.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div calss="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div calss="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            <div calss="form-group">
                <label asp-for="UserName">User Name</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-warning"></span>
            </div>

            <div calss="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>

            <div calss="form-group">
                <label asp-for="Confirm">Confirm</label>
                <input asp-for="Confirm" type="password" class="form-control" />
                <span asp-validation-for="Confirm" class="text-warning"></span>
            </div>

            <br />
            <div class="form-group">
                @*<input type="submit" value="Register New User" class="btn btn-primary" />*@
                <button type="submit" class="btn btn-outline-primary"><i class="fa fa-save"></i>  Register New User</button>
                @*<a asp-action="Login" class="btn btn-outline-success"><i class="fa-solid fa-rotate-left"></i>  Back to User</a>*@
            </div>
        </form>
    </div>
</div>
<div class="text-success small">
    <p>
        @ViewBag.Message
    </p>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}