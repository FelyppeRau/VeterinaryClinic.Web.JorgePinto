@model VeterinaryClinic.Web.JorgePinto.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "ChangeUser";
}

<h2>Change User</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div calss="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div calss="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            <br />

            @* <div class="form-group">
                <button type="submit" class="btn btn-outline-primary"><i class="fa-solid fa-user-check"></i>    Update</button>
                <a asp-action="ChangePassword" class="btn btn-outline-warning"><i class="fa-solid fa-key"></i>    Change Password</a>
            </div> *@

            <div class="form-group d-flex justify-content-between">
                <div class="mr-2">
                    <button type="submit" class="btn btn-outline-primary"><i class="fa-solid fa-user-check"></i> Update</button>
                </div>
                <div class="mr-2">
                    <a asp-action="ChangePassword" class="btn btn-outline-warning"><i class="fa-solid fa-key"></i> Change Password</a>
                </div>
            </div>
           
            @* AQUI SÓ APARECE O "REGISTER NEW USER" CASO ESTEJA LOGADO COMO "ADMIN" *@
            <div>
                @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                {
                    <a asp-action="Register" class="btn btn-outline-success w-100"><i class="fa-solid fa-user-plus"></i>    Register New User</a>
                }
            </div>

 
            <div class="text-success small">@ViewBag.UserMessage</div>
        </form>
    </div>
</div>

